@model ElectroShop.Models.DONDATHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN ĐƠN HÀNG</h2>

@using (Html.BeginForm("Edit", "DonHang", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">Mã đơn hàng:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="MaDonHang" value="@Model.MaDonHang" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Đã thanh toán:</label>
        <div class="col-md-10">
            <input type="checkbox" name="DaThanhToan" @(Model.DaThanhToan.GetValueOrDefault() ? "checked" : "") value="true" />
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">Tình trạng giao hàng:</label>
        <div class="col-md-10">
            <input type="number" name="TinhTrangGiaoHang" value="@Model.TinhTrangGiaoHang" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ngày giao:</label>
        <div class="col-md-10">
            <!-- Use the default ToString method without arguments -->
            <input type="datetime-local" name="NgayGiao" value="@Model.NgayGiao.ToString()" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ ĐƠN HÀNG", "Index")
</div>
