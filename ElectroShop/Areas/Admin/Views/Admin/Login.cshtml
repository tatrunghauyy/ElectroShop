
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        #login-container {
            display: flex;
            background-color: #f0f0f0;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            border-radius: 10px;
        }

        #image-container {
            flex: 1;
            overflow: hidden;
        }

            #image-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        #form-container {
            flex: 1;
            padding: 20px;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
            padding-right: 30px;
        }

        button {
            width: 100%;
            font-family: Poppins-Bold;
            font-size: 15px;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: rgba(104, 191, 219, 1);
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: rgba(104, 191, 219, 0.8);
            }

        .login100-form-title {
            font-family: Poppins-Bold;
            font-size: 24px;
            color: #333333;
            line-height: 1.2;
            text-align: center;
            width: 100%;
            display: block;
            padding-bottom: 54px;
        }

        .text-center {
            text-align: center;
        }

        .p-t-12 {
            padding-top: 12px;
        }

        .txt1 {
            font-family: Poppins-Regular;
            font-size: 13px;
            line-height: 1.5;
            color: #999999;
        }

        .txt2 {
            font-family: Poppins-Regular;
            font-size: 13px;
            line-height: 1.5;
            color: #666666;
        }
    </style>
</head>
<body>
    <div id="login-container">
        <div id="image-container">
            <img src="~/Images/laptop-like-new-99-la-gi-co-tot-khong-co-nen-1.jpg" />
        </div>
        <div id="form-container">
            <form action="~/Admin/Admin/Login" method="post">
                <span class="login100-form-title">
                    Đăng Nhập
                </span>
                <div style="position: relative;">
                    <input type="text" name="UserName" placeholder="Tên tài khoản" required>
                    <i class="icon fa fa-address-card"></i>
                </div>
                <div style="position: relative;">
                    <input type="password" name="Password" placeholder="Mật khẩu" required>
                    <i class="icon fa fa-key"></i>
                </div>
                <p style="font-style:italic; color:red; margin:0px;">@ViewBag.ThongBao</p>
                <button type="submit">Đăng Nhập</button>
                <div class="text-center p-t-12">
                    <span class="txt1">
                        Forgot
                    </span>
                    <a class="txt2" href="#">
                        Username / Password?
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

